<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yorix.registration.controllers.AddNewLorryController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <AnchorPane>
        <HBox spacing="10.0" AnchorPane.rightAnchor="0.0">
            <Label text="%lbl.carId" />
            <TextField fx:id="carId" />
        </HBox>
    </AnchorPane>
    <AnchorPane>
        <HBox spacing="10.0" AnchorPane.rightAnchor="0.0">
            <Label text="%lbl.phoneNum" />
            <TextField fx:id="phoneNum" promptText="+380 XX XXX XX XX" text="+380" />
        </HBox>
    </AnchorPane>
    <AnchorPane>
        <HBox spacing="10.0" AnchorPane.rightAnchor="0.0">
            <Label text="%lbl.consignee" />
            <TextField fx:id="consignee" />
        </HBox>
    </AnchorPane>
    <AnchorPane layoutX="20.0" layoutY="90.0">
        <VBox layoutX="6.0" spacing="10.0">
            <RadioButton fx:id="rdbPolitrans" mnemonicParsing="false" text="%lbl.politrans" />
            <RadioButton fx:id="rdbExim" mnemonicParsing="false" text="%lbl.exim" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </VBox>
    </AnchorPane>
   <AnchorPane>
      <children>
         <Button mnemonicParsing="false" onAction="#addNewLorry" text="%btn.add" AnchorPane.rightAnchor="0.0" />
      </children>
   </AnchorPane>
</VBox>
