<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yorix.registration.controllers.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <HBox spacing="10.0">
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <TextField promptText="%lbl.search" />
                <Button mnemonicParsing="false" text="%btn.search" />
            </HBox>
            <HBox spacing="10.0">
                <Button mnemonicParsing="false" onAction="#createNote" text="%btn.addNote" />
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#openNote" text="%btn.editNote" />
            </HBox>
        </VBox>
        <VBox spacing="10.0">
            <Button fx:id="btnShow1Broker" mnemonicParsing="false" onAction="#showCarriages" prefWidth="200.0" text="%btn.show1Broker" />
            <Button fx:id="btnShow2Broker" mnemonicParsing="false" onAction="#showCarriages" prefWidth="200.0" text="%btn.show2Broker" />
         <Button fx:id="btnShowAll" layoutX="10.0" layoutY="45.0" mnemonicParsing="false" onAction="#showCarriages" prefWidth="200.0" text="%btn.showAll" />
        </VBox>
    </HBox>
    <TableView fx:id="tblLorries">
        <columns>
            <TableColumn fx:id="tblClmCarID" minWidth="70.0" prefWidth="100.0" text="%tbl.clm.carNum" />
            <TableColumn fx:id="tblClmDriversPhone" minWidth="100.0" prefWidth="100.0" text="%tbl.clm.driversPhone" />
            <TableColumn fx:id="tblClmBroker" maxWidth="100.0" minWidth="80.0" prefWidth="100.0" text="%tbl.clm.broker" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
