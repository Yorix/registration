<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yorix.registration.controllers.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <AnchorPane>
      <children>
           <VBox spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
               <HBox spacing="10.0">
                   <Button mnemonicParsing="false" text="%btn.search" />
               </HBox>
               <HBox spacing="10.0">
                   <Button mnemonicParsing="false" onAction="#addCarriage" text="%btn.addNote" />
               </HBox>
           </VBox>
           <VBox layoutY="70.0" spacing="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <Button fx:id="btnShowBroker1" mnemonicParsing="false" onAction="#showCarriages" prefWidth="200.0" text="%btn.show1Broker" />
               <Button fx:id="btnShowBroker2" mnemonicParsing="false" onAction="#showCarriages" prefWidth="200.0" text="%btn.show2Broker" />
               <Button fx:id="btnShowAll" layoutX="10.0" layoutY="45.0" mnemonicParsing="false" onAction="#showCarriages" prefWidth="200.0" text="%btn.showAll" />
           </VBox>
      </children>
   </AnchorPane>
    <TableView fx:id="tblCarriages">
        <columns>
            <TableColumn fx:id="tblClmDate" minWidth="120.0" prefWidth="120.0" text="%tbl.clm.date" />
            <TableColumn fx:id="tblClmCarNumber" minWidth="100.0" prefWidth="100.0" text="%lbl.carNum" />
            <TableColumn fx:id="tblClmPhoneNumber" minWidth="150.0" prefWidth="150.0" text="%lbl.phoneNum" />
            <TableColumn fx:id="tblClmConsignee" minWidth="150.0" prefWidth="150.0" text="%tbl.clm.consignee" />
            <TableColumn fx:id="tblClmBroker" maxWidth="100.0" minWidth="80.0" prefWidth="100.0" text="%tbl.clm.broker" />
            <TableColumn fx:id="tblClmDeclarationId" minWidth="150.0" prefWidth="150.0" text="%lbl.decId" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
